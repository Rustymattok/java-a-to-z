CREATE DATABASE "javaTask"
  WITH OWNER = postgres
       ENCODING = 'UTF8'
       TABLESPACE = pg_default
       LC_COLLATE = 'Russian_Russia.1251'
       LC_CTYPE = 'Russian_Russia.1251'
       CONNECTION LIMIT = -1;

create table task(
id serial primary key,
nameTask character varying (2000),
statusRole integer
);

create table comments(
id serial primary key,
textComment text,
task_id integer references task(id)
);

create table filesTask(
id serial primary key,
nameFile character varying (2000),
file_id integer references task(id)
);

insert into task(nameTask,statusRole) values('help',1);
insert into comments (textComment,task_id) values('helpdddddddd',1);
insert into filesTask (nameFile,file_id) values('file way',1);
select * from comments
 